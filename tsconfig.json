{
    "compilerOptions": {
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "skipLibCheck": true,
        "lib": ["dom", "es2018"],
        "moduleResolution": "node",
        "module": "esnext",
        "jsx": "react",
        "importHelpers": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
